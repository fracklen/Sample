<% @people.each do |person| %>
  <h2><%= person.name %></h2>
  <ul>
    <% person.wishes.select {|wish| wish.cancelled_at == nil }.each do |wish| %>
      <li>
        <%= wish.name %>
      </li>
    <% end %>
  </ul>

  <ul>
    <% person.wishes.select {|wish| wish.cancelled_at != nil }.each do |wish| %>
      <li style="text-decoration: line-through">
        <%= wish.name %>
      </li>
    <% end %>
  </ul>

<% end %>